{
    "name": "renfordt/unit-lib",
    "description": "A PHP package for Units of Measurements",
    "type": "library",
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.2",
        "symfony/var-dumper": "^7.3",
        "phpunit/phpunit": "^12.4",
        "laravel/pint": "^1.25"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Renfordt\\UnitLib\\": "src/"
        }
    },
    "authors": [
        {
            "name": "renfordt",
            "email": "jannikrenfordt@gmx.de"
        }
    ],
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "phpunit",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
